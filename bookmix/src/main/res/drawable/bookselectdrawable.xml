<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:drawable="@color/black" /> <!-- focused -->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/black" /> <!-- focused and pressed-->
    <item android:state_pressed="true" android:drawable="@color/lightgrey" /> <!-- pressed -->
    <item android:state_enabled="true" android:state_selected="true" android:drawable="@color/yellow" />
    <item android:drawable="@color/transparent" /> <!-- default -->
</selector> 